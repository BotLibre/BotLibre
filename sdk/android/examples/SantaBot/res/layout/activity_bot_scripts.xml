<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_margin="4sp"
            android:background="@drawable/icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="4sp"
            android:layout_weight="1"
            android:text="Active Scripts"
            android:textSize="18sp" />

        <Button
            android:id="@+id/helpButton"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_margin="4sp"
            android:background="@drawable/help"
            android:onClick="help"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#ddd" >
    </View>

    <ListView
        android:id="@+id/botScriptList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menuButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/menu"
            android:onClick="menu"
            android:text="" />

        <Button
            android:id="@+id/upButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/up"
            android:onClick="upScript"
            android:text="" />

        <Button
            android:id="@+id/downButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/down"
            android:onClick="downScript"
            android:text="" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/add"
            android:onClick="addBotScript"
            android:text="" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/edit"
            android:onClick="editBotScript"
            android:text="" />

        <Button
            android:id="@+id/importButton"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:layout_margin="4dp"
            android:background="@drawable/import_symbol"
            android:onClick="importBotScript"
            android:text="" />
    </LinearLayout>

</LinearLayout>